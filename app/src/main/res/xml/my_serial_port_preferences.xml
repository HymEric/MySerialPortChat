<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android" android:title="Serial port setup">
    <ListPreference android:key="DEVICE" android:title="串口号" android:persistent="true"></ListPreference>
    <ListPreference android:entries="@array/baudrates_name" android:entryValues="@array/baudrates_value" android:key="BAUDRATE" android:persistent="true" android:title="波特率"></ListPreference>
    <ListPreference android:entries="@array/parity_name" android:entryValues="@array/parity_value" android:key="PARITY"  android:persistent="true" android:title="奇偶校验位"></ListPreference>
    <ListPreference android:entries="@array/databits_name" android:entryValues="@array/databits_value" android:key="DATABITS" android:persistent="true" android:title="数据位"></ListPreference>
    <ListPreference android:entries="@array/stopbit_name" android:entryValues="@array/stopbit_value" android:key="STOPBIT" android:persistent="true" android:title="停止位"></ListPreference>
</PreferenceScreen>
